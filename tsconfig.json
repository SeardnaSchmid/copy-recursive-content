{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "lib": [
            "ES6",
            "DOM"
        ],
        "allowJs": true,
        "outDir": ".",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}